@model Student

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Xóa Sinh Viên</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h1 class="my-4">Xóa Sinh Viên</h1>
        <div class="alert alert-danger" role="alert">
            Bạn có chắc chắn muốn xóa sinh viên này không?
        </div>
        <dl class="row">
            <dt class="col-sm-2">Mssv</dt>
            <dd class="col-sm-10">@Model.Mssv</dd>
            <dt class="col-sm-2">Tên</dt>
            <dd class="col-sm-10">@Model.Name</dd>
            <dt class="col-sm-2">Tuổi</dt>
            <dd class="col-sm-10">@Model.Course</dd>
            <dt class="col-sm-2">Lớp</dt>
            <dd class="col-sm-10">@Model.Carrer</dd>
        </dl>
        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Xóa</button>
            <a href="@Url.Action("Index", "Custom")" class="btn btn-secondary">Hủy</a>
        </form>
    </div>
</body>
</html>
